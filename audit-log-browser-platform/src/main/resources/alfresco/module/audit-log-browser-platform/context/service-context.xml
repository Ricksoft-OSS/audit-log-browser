<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="jp.ricksoft.auditLogManager" class="jp.ricksoft.auditlogbrowser.service.manager.audit.AuditLogManager">
        <property name="appName" value="${AuditLogBrowser.app.name}"/>
        <property name="auditService" ref="AuditService"/>
    </bean>

    <bean id="jp.ricksoft.csvManager" class="jp.ricksoft.auditlogbrowser.service.manager.file.CSVManager">
        <property name="tmpDirPath" value="${AuditLogBrowser.dir.tmp}"/>
        <property name="csvName" value="${AuditLogBrowser.daily.csv.name}"/>
        <property name="auditLogManager" ref="jp.ricksoft.auditLogManager"/>
        <property name="labels">
            <array value-type="java.lang.String">
                <value>${AuditLogBrowser.csv.label.id}</value>
                <value>${AuditLogBrowser.csv.label.date}</value>
                <value>${AuditLogBrowser.csv.label.user}</value>
                <value>${AuditLogBrowser.csv.label.action}</value>
                <value>${AuditLogBrowser.csv.label.site}</value>
                <value>${AuditLogBrowser.csv.label.content}</value>
                <value>${AuditLogBrowser.csv.label.path}</value>
            </array>
        </property>
        <property name="keys">
            <array value-type="java.lang.String">
                <value>id</value>
                <value>time</value>
                <value>user</value>
                <value>action</value>
                <value>site</value>
                <value>nodename</value>
                <value>nodepath</value>
                <value>description</value>
            </array>
        </property>
    </bean>

    <bean id="jp.ricksoft.zipManager" class="jp.ricksoft.auditlogbrowser.service.manager.file.ZipManager"/>

    <bean id="jp.ricksoft.repositoryFolderManager"
          class="jp.ricksoft.auditlogbrowser.service.manager.repo.RepositoryFolderManager">
        <property name="serviceRegistry" ref="ServiceRegistry"/>
    </bean>

    <bean id="jp.ricksoft.fileManager" class="jp.ricksoft.auditlogbrowser.service.FileSystemControlService"/>

    <bean id="jp.ricksoft.downloadProcessManager"
          class="jp.ricksoft.auditlogbrowser.service.DownloadProcessService">
    </bean>

    <bean id="jp.ricksoft.audit.service"
          class="jp.ricksoft.auditlogbrowser.service.AuditLogFileService">
        <property name="csvManager" ref="jp.ricksoft.csvManager"/>
        <property name="zipManager" ref="jp.ricksoft.zipManager"/>
        <property name="fileManager" ref="jp.ricksoft.fileManager"/>
        <property name="auditLogManager" ref="jp.ricksoft.auditLogManager"/>
        <property name="repositoryFolderManager" ref="jp.ricksoft.repositoryFolderManager"/>
        <property name="downloadProcessManager" ref="jp.ricksoft.downloadProcessManager"/>
    </bean>
</beans>
